{
  "serverName": "deno-mcp-demo",
  "version": "0.1.0",
  "httpPort": 8787,
  "features": {
    "enableHttpAdmin": true,
    "enableCodeEditing": true,
    "enableMcpSse": true,
    "enableMcpHttp": true
  },
  "cors": {
    "allowedOrigins": [
      "*"
    ]
  },
  "upstreams": [
    {
      "name": "context7-proxy",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "namespace": "context7",
      "enabled": true,
      "reconnect": {
        "enabled": true,
        "maxRetries": 5,
        "initialDelayMs": 1000,
        "maxDelayMs": 30000,
        "factor": 2,
        "heartbeatMs": 30000
      }
    },{
      "name": "figma",
      "transport": "stdio",
      "command": "deno",
      "args": ["run", "-A", "npm:figma-developer-mcp", "--figma-api-key=", "--stdio"],
      "enabled": false,
      "mapping": {
        "hideNamespacePrefix": true
      },
      "reconnect": {
        "enabled": true,
        "maxRetries": "infinite",
        "initialDelayMs": 2000,
        "maxDelayMs": 60000,
        "factor": 2,
        "heartbeatMs": 60000
      }
    }
  ],
  "upstreamRefresh": {
    "intervalMinutes": 1440
  },
  "connection": {
    "heartbeat": {
      "intervalMs": 10000,
      "timeoutMs": 30000
    },
    "session": {
      "maxIdleMs": 1800000,
      "cleanupIntervalMs": 120000
    },
    "reconnect": {
      "enabled": true,
      "maxAttempts": 5,
      "baseDelayMs": 1000,
      "maxDelayMs": 30000
    }
  }
} 